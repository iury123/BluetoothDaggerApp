<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/devicesListFragment">

    <fragment
        android:id="@+id/devicesListFragment"
        android:name="com.example.iurymiguel.daggerapp.views.fragments.DevicesListFragment"
        android:label="fragment_devices_list"
        tools:layout="@layout/fragment_devices_list" >
        <action
            android:id="@+id/action_devicesListFragment_to_deviceDetailsFragment"
            app:destination="@id/deviceDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/deviceDetailsFragment"
        android:name="com.example.iurymiguel.daggerapp.views.fragments.DeviceDetailsFragment"
        android:label="fragment_device_details"
        tools:layout="@layout/fragment_device_details" />
</navigation>